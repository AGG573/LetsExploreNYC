<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/boardwalk"
    tools:context=".ViewActivitiesActivity">

    <Button
        android:id="@+id/museums"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="Museums"
        android:textColor="#FFFFFF"
        android:background="#79F51919"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/activites"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="Activities"
        android:textColor="#FFFFFF"
        android:background="#79212736"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/parks"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"
        android:background="#79269226"
        android:text="Parks"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/sightseeing"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Sightseeing"
        android:background="#C4E5E9EE"
        android:textSize="18sp"
        />

</LinearLayout>